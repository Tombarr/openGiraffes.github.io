.page-top.animated.fadeInDown
  .nav
    li
      if is_home()
        a.current(href="/")= __('Home')					
      else
        a(href="/en/")= __('Home')	
    li
      if is_current('about')
        a.current(href="/en/about")= __('About')			
      else
        a(href="/en/about")= __('About')
    li
      if is_archive()
        a.current(href="/en/archives")= __('Archive')
      else
        a(href="/en/archives")= __('Archive')
    li
      if is_current('links')
        a.current(href="/en/links")= __('Links')
      else
        a(href="/en/links")= __('Links')
    li
      a(href="https://docs.opengiraffes.top")= __('Documentation')
    li
      a(href="https://store.opengiraffes.top")= 'openGiraffes Store'
    li
      a(href="https://opengiraffes.top")= '中文'
  .information
    .back_btn
      li
        if is_post()
          a.fa.fa-chevron-left(onclick="window.history.go(-1)") 
        else
          a.fa.fa-chevron-left(onclick="window.history.go(-1)",style="display:none;") 
    .avatar
      img(src=theme.avatar)
